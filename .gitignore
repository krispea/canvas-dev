# Ignore directories generated by Composer
/vendor/
/web/core/
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/
/web/libraries/
/drush/Commands/contrib/

# Ignore sensitive configuration files
/web/sites/*/settings*.php
/web/sites/*/services*.yml

# Ignore paths that may contain user-generated content
/web/sites/*/files/
/web/sites/*/private/

# Ignore multi-site test environment
/web/sites/simpletest/

# Ignore DDEV-specific generated files
/.ddev/.ddev-docker-compose-*.yaml
/.ddev/db_snapshots/
/.ddev/.homeadditions/
/.ddev/addon-metadata/
/.ddev/.webimageBuild/
/.ddev/.dbimageBuild/

# Ignore Node.js dependencies
node_modules/
/web/core/node_modules/

# Ignore build artifacts
npm-debug.log
yarn-error.log

# Ignore IDE and editor files
.idea/
.vscode/
*.swp
*.swo
*~
.DS_Store

# Ignore compiled files
*.sass-cache/
.sass-cache/

# Ignore cache directories
.cache/

# Ignore Composer lock (optional - uncomment if you want to ignore it)
# composer.lock

# Ignore Canvas UI build artifacts
/web/modules/contrib/canvas/ui/node_modules/
/web/modules/contrib/canvas/ui/dist/

# Keep important files
!web/sites/default/settings.php
!web/sites/default/default.settings.php

# Ignore the components installed via Composer (they're in a separate repo)
# Comment this out if you want to track your tech2flow/sdc changes here instead
/web/themes/custom/appf/components/
